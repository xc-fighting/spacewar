<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menubg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.12" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="122dp"
            android:textColor="#ffff00"
            android:textSize="25dp"
            android:text="击杀得分" />

        <TextView
            android:id="@+id/jisha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:text="zou"
            android:textColor="#ffff00"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textVie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/jisha"
            android:layout_marginTop="43dp"
            android:text="剩余生命得分"
            android:textColor="#ffff00"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/shengyu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textVie"
            android:layout_marginLeft="34dp"
            android:layout_toRightOf="@+id/textVie"
            android:text="zou"
            android:textColor="#ffff00"
            android:textSize="25dp" />

        <Button
            android:id="@+id/backto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textVie"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:background="@drawable/buttonbg1"
            android:text="返回" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/textVie"
            android:layout_marginTop="46dp"
            android:textSize="25dp"
            android:textColor="#ffff00"
            android:text="战斗胜利" />

    </RelativeLayout>

</LinearLayout>